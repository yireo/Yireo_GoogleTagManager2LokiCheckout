<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block
                name="yireo_googletagmanager2.loki_checkout.component"
                template="Yireo_GoogleTagManager2LokiCheckout::component.phtml"
                after="yireo_googletagmanager2.pusher-script"
                ifconfig="googletagmanager2/settings/enabled"/>
        </referenceContainer>

        <referenceContainer name="loki-components">
            <block
                name="yireo_googletagmanager2.loki_checkout.script.component.googletagmanager"
                template="Yireo_GoogleTagManager2LokiCheckout::script/component/googletagmanager-component.phtml"
                ifconfig="googletagmanager2/settings/enabled"/>
        </referenceContainer>
    </body>
</page>
